body
  font-family Monospace
  background-color #000
  color #fff
  margin 0px
  overflow hidden

#hubo_container
  canvas
    border 1px solid white

#controls
  margin-left 5px
  border 1px solid white

td
  vertical-align top

.joint
  padding 10px
  table
    border-collapse collapse
  & > div
    &:first-child
      margin-bottom 0.5em
      width 21em

.joint_slider
  width 15em
  float left

.joint_txt
  padding-left 1em
