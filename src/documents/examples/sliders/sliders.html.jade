    tr
      td
        #hubo_container(style='position:relative; width:480px; height: 480px;')
          #load(style='position:absolute')
        div(style='text-align: center;') LEFT button ROTATES. RIGHT button PANS. MIDDLE wheel ZOOMS.
      td
        #controls
          ul
            li 
              a(href="#upper_body") Upper Body
            li
              a(href="#lower_body") Lower Body
            li
              a(href="#neck_waist") Neck / Waist
            li 
              a(href="#fingers") Fingers
            p Beta: Keep left foot anchored.
              input#footanchor(type="checkbox")
          #upper_body
            table
              tr
                td
                  .joint(data-name='RSP')
                    div Right Shoulder Pitch: 
                    .joint_slider
                    span.joint_txt
                td
