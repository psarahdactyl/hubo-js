@import 'nib'
body
  overflow-x scroll !important
  font-size x-large

legend
  // Style legends to look like button labels
  font-size 18px
  font-weight 700
  font-family Helvetica,Arial,sans-serif 
  // Vertical Align the damn thing
  line-height 48px
  vertical-align center

// Give more space to the legend vs the ul.
// Note that making them add up to 100% causes wrapping which looks UGLY.
.ui-field-contain .ui-controlgroup-label
  width 35%
.ui-field-contain .ui-controlgroup-controls
  width 60%

#content
  position absolute
//  display box
//  display -webkit-box
//  display -moz-box

#hubo_container
  position relative
  border 1px solid black

#controls  
  p 
    padding-right 1em

table
  tr
    th
      text-align left
      vertical-align middle

label.ui-slider
  margin-top 0
  margin-bottom 0      
